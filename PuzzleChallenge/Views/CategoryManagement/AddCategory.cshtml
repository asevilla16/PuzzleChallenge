@inject RoleManager<IdentityRole> RoleManager

@model Category

@{
    ViewBag.Title = "Create new Category Access";
}

<h1>Create new Category Access</h1>

<p>This form will be used to create new categories only visible for the selected role.</p>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleAuthorized" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="RoleAuthorized" class="form-select">
                @foreach (var rol in RoleManager.Roles)
                {
                    <option value="@rol.Name">@rol.Name</option>
                }
            </select>
            <span asp-validation-for="RoleAuthorized" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" asp-controller="Home" class="btn btn-danger">Cancel</a>
        </div>
    </div>
</form>